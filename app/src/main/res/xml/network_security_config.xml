<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Izinkan seluruh HTTP (cleartext) untuk semua domain/IP -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
